        <activity
            android:name="SensorProximity"
            android:label="@string/app_name">
        </activity>
        
        <activity
            android:name="SensorAccelerometer"
            android:label="@string/app_name">
        </activity>
        <activity
            android:name="SensorLight"
            android:label="@string/app_name">
        </activity>
        <activity
            android:name="SensorMagnetic"
            android:label="@string/app_name">
        </activity>
        
        <activity
            android:name="SensorGyroscope"
            android:label="@string/app_name">
        </activity>
        
        <activity
            android:name="SensorOrientation"
            android:label="@string/app_name">
        </activity>
        
        <activity
            android:name="SensorPressure"
            android:label="@string/app_name">
        </activity>
    </application>

</manifest>
